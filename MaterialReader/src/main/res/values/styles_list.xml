<resources>

    <!-- BOOKS LIST ACTIVITY STYLES -->

    <style name="list_appbarlayout" parent="appbarlayout">
        <item name="elevation">0dp</item>
    </style>

    <style name="list_toolbar" parent="toolbar">
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="android:paddingLeft">@dimen/toolbar_horz_margin</item>
        <item name="android:paddingRight">@dimen/toolbar_horz_margin</item>
    </style>

    <style name="list_swiperefresh">
       <item name="android:layout_width">@dimen/match_parent</item>
       <item name="android:layout_height">@dimen/match_parent</item>
       <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="list_twoline_text">
        <item name="android:layout_width">@dimen/list_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@color/list_text_background</item>
    </style>

    <style name="list_item">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">@dimen/list_item_margin</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:minHeight">72dp</item>
    </style>

    <style name="list_image">
        <item name="android:layout_width">@dimen/list_image_width</item>
        <item name="android:layout_height">@dimen/list_image_height</item>
        <item name="android:layout_marginLeft">@dimen/list_image_horz_margin</item>
        <item name="android:layout_marginRight">@dimen/list_image_horz_margin</item>
        <item name="android:layout_marginTop">@dimen/list_image_vert_margin</item>
        <item name="android:layout_marginBottom">@dimen/list_image_vert_margin</item>
        <item name="android:background">@color/photo_placeholder</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="list_full_image">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/card_scrim</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="list_primary_text" parent="list_twoline_text">
        <item name="android:layout_height">@dimen/primary_text_height</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/primary_text</item>
    </style>

    <style name="list_secondary_text" parent="list_twoline_text">
        <item name="android:layout_height">@dimen/secondary_text_height</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/secondary_text</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="list_divider">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/dividerVertical</item>
    </style>

    <style name="list_number">
        <item name="android:visibility">@integer/list_number_visibility</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingRight">@dimen/list_number_horz_padding</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/secondary_text</item>
    </style>

    <style name="list_recyclerview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/list_bpadding</item>
        <item name="android:paddingLeft">@dimen/list_lpadding</item>
        <item name="android:paddingRight">@dimen/list_rpadding</item>
        <item name="android:paddingTop">@dimen/list_tpadding</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

</resources>